#container{
  background-color: #edeff1;
}

.top{
  width: 100%;
  height:100rpx;
  margin-top: 0rpx;
  margin-left: 0rpx;
  margin: 0;
  padding: 0;
  /* background-image: url('../../images/top.png'); */
  background-color: #86c8cb;
}

.search{
  width: 70%;
  height: 50rpx;
  margin-left: 15%;
  background-color: white;
  position: absolute;
  top: 30rpx;
  border-radius: 30rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
}

.bottom{
  background-color: white;
  width: 90%;
  height: 400rpx;
  margin-left: 5%;
  margin-bottom: 50rpx;
}

.item {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap; 
}

.item .item-top{
  display: flex;
  flex-flow: row nowrap;
   width: 100%; 
   height: 25%; 
}

.item-top-left{
  width: 70rpx;
  height: 70rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.item-top image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.item-top-middle {
  display: flex;
  flex-flow: column nowrap;
  width: 500rpx;
  box-sizing: border-box;
  padding-top: 20rpx;
  margin-left: 20rpx;
}

.item-top-middle-top{
  display: flex;
  height: 50%;
  flex-flow: row nowrap;
  justify-content: flex-start;
}

.name{
  display: inline-block;
  font-size: 25rpx;
  margin-right: 30rpx;
}

.time, .data{
  display: inline-block;
  font-size: 20rpx;
  margin-left: 10rpx;
}

.item-top-middle-bottom{
  font-size: 25rpx;
}

.item-top-right{
  height: 50rpx;
  width: 90rpx;
  margin-top: 20rpx;
  margin-right: 10rpx;
}

.item-top-right button{
  width: 100%;
  height: 100%;
  font-size: 25rpx;
  padding: 0rpx;
  background-color: #c5df6c;
  color: white;
  border: none;
}
.item-middle {
  display: flex;
  flex-flow: row nowrap;
  height: 60%;
  width: 100%;
  margin: 20rpx;
}

.item-middle image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 18rpx;
}

.item-bottom{
  width: 100%;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
}

.item-bottom .pound{
  color: #b8c4d3;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.item-bottom .sign{
  width: 18%;
  height: 50rpx;
  box-sizing: border-box;
  padding: 10rpx;
  font-size: 25rpx;
  background-color: #8ba1b5;
  color: white;
}
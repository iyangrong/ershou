
.header{
  margin-bottom: 5px;
}

.header .type{
  display:flex;
  justify-content:center;
  margin-bottom: 10px;
}

.header image{
  width:56px;
  height: 32px;
  display: block;
  margin-bottom: 10px;
}
.header .type .li{
  width: 18%;
  height: 30px;
  line-height: 30px;
  margin-left: 1.5%;
  color: white;
  text-align: center;
  font-size:14px;
  border-radius: 5px;
}

.color1{
  background: #899FB3;
}
.color2{
  background:#C3DE6C;
}
.input{
  border-bottom: 1px solid #000000;
  width: 90%;
  margin:5%;
}
.inputPlaceholder{
  color:#cecece;
}

.article{
  width:90%;
  margin: 5%;
  border:1px solid #eeeeee;
}

.content .img{
  height: 100px;
  width:100%;
  position: relative;
}

.content .img image{
  width: 60px;
  height: 60px;
  position: absolute;
  border-radius: 10rpx;
  
}

.content .img image:first-child{
  left: 25px;
  bottom: 25px;
}
.content .img image:nth-child(2){
  left: 125px;
  bottom: 25px;
  background: #eeeeee;
}

.content .img image:nth-child(3){
  left: 205px;
  bottom: 25px;
  background: #eeeeee;
}

 .content .img image:nth-child(4){
  left: 285px;
  bottom: 25px;
  background: #eeeeee;
} 

.line{
  width:100%;
  height:8px;
  background: #E2E2E2;
  position: absolute;
  bottom: 5px;
}
.info{
  margin: 10px auto;
}
.info label{
  display: inline-block;
  width: 19%;
  margin-left: 1%;
  font-size: 16px;
  color: #bfc8c8;
}
.user_info{
  width: 75%;
  margin: 0 2.5%;
  display:inline-block;
  border-bottom: 1px solid #000000;
}
.footer{
  height: 100px;
  width: 100%;
  margin-top:10px;
  position: relative;
}

.footer button{
  display: block;
  width: 100%;
  height: 50px;
  margin: 0 auto;
  text-align: center;
  line-height: 50px;
  background-color: #C3DE6C;
  border-radius: 0;
  bottom: 0;
  position: absolute;
}